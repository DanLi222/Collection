<body>
  <!-- Edit user profile form -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <div class="container bg-light">
      <div class="row flex-lg-nowrap">
        <div class="col">
          <div class="row">
            <div class="col mb-3">
              <div class="card-body mt-3">
                <div class="e-profile">

                  <!-- Change avatar -->
                  <div class="row">
                    <div class="col-12 col-sm-auto mb-3">
                      <div class="mx-auto" style="width: 140px;">
                        <div class="d-flex justify-content-center align-items-center rounded" style="height: 140px; background-color: rgb(233, 236, 239);">
                          <span style="color: rgb(166, 168, 170); font: bold 8pt Arial;"><%= image_tag(fetch_avatar(current_user), :size=>"120", :class=>"rounded")%></span>
                        </div>
                      </div>
                    </div>
                    <div class="col d-flex flex-column flex-sm-row justify-content-between mb-3">
                      <div class="text-center text-sm-left mb-2 mb-sm-0">
                        <h4 class="pt-sm-2 pb-1 mb-0 text-nowrap"><%= current_user.name %></h4>
                        <p class="mb-0"><%= current_user.email %></p>
                        <div class="text-muted"><small></small></div>
                        <div class="mt-2">
                          <button class="btn btn-primary" type="button">
                            <i class="fa fa-fw fa-camera"></i>
                            <%= f.file_field :avatar, class:"file-upload" %>
                          </button>
                        </div>
                      </div>
                      <div class="text-center text-sm-right">
                        <div class="text-muted"><small><%= current_user.created_at %></small></div>
                      </div>
                    </div>
                  </div>

                  <!-- Change other information -->
                  <ul class="nav nav-tabs">
                    <li class="nav-item"><a href="" class="active nav-link"><%= t('user.setting') %></a></li>
                  </ul>
                  <div class="tab-content pt-3">
                    <div class="tab-pane active">
                      <form class="form" novalidate="">
                        <div class="row">
                          <div class="col">
                            <div class="row">
                              <!-- Change uesr name -->
                              <div class="col">
                                <div class="form-group">
                                  <label><%= t('user.user_name') %></label>
                                  <%= f.text_field :name, class:"form-control", placeholder:current_user.name %>
                                </div>
                              </div>
                              <!-- Change password -->
                              <div class="col">
                                <div class="form-group">
                                  <label><%= t('user.password.new') %><i><%= t('user.password.blank') %></i></label>
                                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                                  <% if @minimum_password_length %>
                                    <br />
                                    <em><%= @minimum_password_length %><%= t('user.password.min') %></em>
                                  <% end %>
                                </div>
                              </div>
                            </div>
                            <div class="row">
                              <!-- Change email -->
                              <div class="col">
                                <div class="form-group">
                                  <label><%= t('user.email.address') %></label>
                                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                    <div><%= t('user.email.confirm') %><%= resource.unconfirmed_email %></div>
                                  <% end %>
                                </div>
                              </div>
                              <!-- Confirm password -->
                              <div class="col">
                                <div class="form-group">
                                  <label><%= t('user.password.confirm') %></label>
                                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                                </div>
                              </div>
                            </div>
                            <!-- Current password -->
                            <div class="row">
                              <div class="col">
                                <div class="form-group">
                                  <label><%= t('user.password.current') %></label>
                                  <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col d-flex justify-content-end">
                            <%= f.submit "Update", class: "btn btn-primary" %>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Footer -->
  <footer class="container">
    <div class="mt-2">
      <span><%= t('user.unhappy') %></span>
      <span>
        <%= button_to t('user.cancel'), registration_path(resource_name), data: { confirm: "Are you sure?" },
                      method: :delete, form_class: "mw-18 d-inline", class:"btn btn-success btn-sm border-0 px-3" %>
      </span>
    </div>
  </footer>
</body>