<div class="d-flex flex-row align-items-center add-comment p-2 bg-white rounded">
  <%= form_with(model: [ @item, @item.comments.build ], local: true) do |form| %>
    <div class="d-flex flex-row add-comment p-2 bg-white rounded">
      <%= image_tag(fetch_avatar(current_user), alt: current_user.name, :size=>"40", :class=>"d-inline-block align-top rounded-circle") %>
      <div class="form-control border-0 no-box-shadow ml-1">
        <span class="font-weight-bold"><%= current_user.name %></span>
      </div>
    </div>
    <div class="mt-2">
      <%= form.text_area :body, placeholder: "Leave a constructive comment...", size: "74" %>
    </div>
    <div class="mt-3">
      <%= form.submit class: "btn btn-success btn-sm border-0 px-3" %>
    </div>
  <% end %>
</div>
