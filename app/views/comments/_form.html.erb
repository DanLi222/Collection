<!-- Comment form -->
<%= form_with(model: [ @item, @item.comments.build ], local: true) do |form| %>
  <!-- Display user information -->
  <div class="p-3 bg-grey rounded">
    <div class="d-flex justify-content-between">
      <div class="d-flex flex-row user">
        <%= image_tag(fetch_avatar(current_user), :size=>"40", :class=>"rounded-circle img-fluid img-responsive") %>
        <div class="d-flex flex-column ml-2">
          <span class="font-weight-bold"><%= current_user.name %></span>
          <span class="day"><%= current_user.email %></span>
        </div>
      </div>
    </div>
  </div>
  <!-- Add comment body -->
  <div class="mt-2">
      <%= form.text_area :body, placeholder: "Leave a constructive comment...", class: "form-control", id: "exampleFormControlTextarea1", rows: "3" %>
  </div>
  <div class="mt-3 mb-3">
    <%= form.submit class: "btn btn-success btn-sm border-0 px-3" %>
  </div>
<% end %>
