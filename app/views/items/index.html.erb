<head>
  <%= stylesheet_link_tag :carousel %>
</head>
<body>
  <main role="main">
    <!-- Carousel -->
    <div id="myCarousel" class="carousel slide <%= @hidden %>" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <!-- First slide -->
        <div class="carousel-item active">
          <img class="first-slide" src="https://res.cloudinary.com/storedan/image/upload/v1590006898/c2_dkjgd5.jpg" alt="First slide">
          <div class="container">
            <div class="carousel-caption text-left">
              <h1><%= t('carousel.slide1.name') %></h1>
              <P><%= t('carousel.slide1.description') %></P>
              <%= link_to t('carousel.slide1.button'), new_user_registration_path, :class => 'btn btn-lg btn-primary'  %>
            </div>
          </div>
        </div>
        <!-- Second slide -->
        <div class="carousel-item">
          <img class="second-slide" src="https://res.cloudinary.com/storedan/image/upload/v1590008975/c7_ipegr5.jpg" alt="Second slide">
          <div class="container">
            <div class="carousel-caption">
              <h1><%= t('carousel.slide2.name') %></h1>
              <p><%= t('carousel.slide2.description') %></p>
            </div>
          </div>
        </div>
        <!-- Third slide -->
        <div class="carousel-item">
          <img class="third-slide" src="https://res.cloudinary.com/storedan/image/upload/v1590009725/c10_rmzecl.jpg" alt="Third slide">
          <div class="container">
            <div class="carousel-caption text-right">
              <h1><%= t('carousel.slide3.name') %></h1>
              <P><%= t('carousel.slide3.description') %></P>
              <%= link_to t('carousel.slide3.button'), new_item_path, :class => 'btn btn-lg btn-primary'  %>
            </div>
          </div>
        </div>
      </div>
      <!-- Previous button -->
      <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only"><%= t('carousel.previous') %></span>
      </a>
      <!-- Next button -->
      <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only"><%= t('carousel.next') %></span>
      </a>
    </div>


    <!-- Display a collection of images
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container marketing">

      <!-- Three columns of images below the carousel -->
      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
            <% @items.each do |item| %>
              <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                  <a href="<%= item_path(item) %>"><img class="card-img-top" src="<%= url_for(item.image) %>" alt="Card image cap"></a>
                  <div class="card-body">
                    <p class="card-text text-center"><%= item.name %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
  
    </div><!-- /.container -->
    <!-- FOOTER -->
    <footer class="container">
      <p class="float-right"><a href="#"><%= t('collection.back') %></a></p>
      <p>&copy; <%= t('collection.name') %></p>
    </footer>
  </main>
</body>
